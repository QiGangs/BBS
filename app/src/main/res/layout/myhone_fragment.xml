<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/myhome_head"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myhome_headpic"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="1dp"
            app:civ_border_color="#bbbbbb"
            android:layout_weight="3" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myhome_headname"
            android:layout_weight="5" />

    </LinearLayout>

    <TextView
        android:background="#bbbbbb"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cggs"
                    android:id="@+id/imageView2"
                    android:layout_weight="1" />

                <TextView
                    android:text="我的帖子"
                    android:textColor="#666666"
                    android:layout_margin="12dp"
                    android:layout_weight="8"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myblog" />

            </LinearLayout>

            <TextView
                android:background="#dddddd"
                android:layout_marginLeft="56dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cggs"
                    android:id="@+id/imageView3"
                    android:layout_weight="1" />

                <TextView
                    android:text="我的收藏"
                    android:layout_margin="12dp"
                    android:layout_weight="8"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mycollect" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lyb"
                    android:id="@+id/image1"
                    android:layout_weight="1" />

                <TextView
                    android:text="开源许可"
                    android:textColor="#666666"
                    android:layout_margin="12dp"
                    android:layout_weight="8"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kyxk" />

            </LinearLayout>

            <TextView
                android:background="#dddddd"
                android:layout_marginLeft="56dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gd"
                    android:id="@+id/image2"
                    android:layout_weight="1" />

                <TextView
                    android:text="版本信息"
                    android:layout_margin="12dp"
                    android:layout_weight="8"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bbxx" />

            </LinearLayout>


            <TextView
                android:background="#dddddd"
                android:layout_marginLeft="56dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gd"
                    android:id="@+id/image3"
                    android:layout_weight="1" />

                <TextView
                    android:text="用户协议"
                    android:layout_margin="12dp"
                    android:layout_weight="8"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/yhxy" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cggs"
                android:id="@+id/imageView4"
                android:layout_weight="1" />

            <TextView
                android:text="注销"
                android:layout_weight="8"
                android:layout_margin="12dp"
                android:textColor="#666666"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myhome_logout" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>